<p id="notice"><%= notice %></p>

<div class="rfloat">
  <div class="floatbox">
    <div class="title">Meetings</div>
    <div class="smalltext">
      <% @exhibitor.meetings.each do |m| %>
        <%= link_to m.name, meeting_path(m) %><br />
      <% end %>
    </div>
  </div>
</div>

<p>
  <b>Name:</b>
  <%= @exhibitor.name %>
</p>

<p>
  <b>Description:</b>
  <%= @exhibitor.description %>
</p>

<p>
  <b>Category</b>
  <%= @exhibitor.exhibitor_category.name %>
</p>

<p>
  <b>Is Sponsor:</b>
  <% if (@exhibitor.sponsor_id) %>
    Yes
  <% else %>
    No
  <% end %>
</p>


<%= link_to 'Edit', edit_exhibitor_path(@exhibitor) %> |
<%= link_to 'Back', exhibitors_path %>
